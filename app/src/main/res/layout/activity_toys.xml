<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:textColor="#FFFFFF"
    android:background="@drawable/gradient_background"
    tools:context=".ToysActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Cars -->
        <TextView
            android:id="@+id/textViewCars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cars"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_margin="16dp"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewCars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCars">

            <!-- Cars Layout -->
            <LinearLayout
                android:id="@+id/linearLayoutCars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Car 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying car 1 image -->
                    <ImageView
                        android:id="@+id/imageViewCars1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/c1"/>

                    <!-- EditText for specifying amount of cars 1 -->
                    <EditText
                        android:id="@+id/etCars1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Add more layouts for car images (up to 5) -->
                <!-- Car 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying car 2 image -->
                    <ImageView
                        android:id="@+id/imageViewCars2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/c2"/>

                    <!-- EditText for specifying amount of cars 2 -->
                    <EditText
                        android:id="@+id/etCars2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Add more layouts for car images (up to 5) -->
                <!-- Car 3 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying car 3 image -->
                    <ImageView
                        android:id="@+id/imageViewCars3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/c3"/>

                    <!-- EditText for specifying amount of cars 3 -->
                    <EditText
                        android:id="@+id/etCars3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Add more layouts for car images (up to 5) -->
                <!-- Car 4 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying car 4 image -->
                    <ImageView
                        android:id="@+id/imageViewCars4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/c4"/>

                    <!-- EditText for specifying amount of cars 4 -->
                    <EditText
                        android:id="@+id/etCars4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Add more layouts for car images (up to 5) -->
                <!-- Car 5 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying car 5 image -->
                    <ImageView
                        android:id="@+id/imageViewCars5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/c5"/>

                    <!-- EditText for specifying amount of cars 5 -->
                    <EditText
                        android:id="@+id/etCars5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Miscellaneous -->
        <TextView
            android:id="@+id/textViewMisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miscellaneous"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_below="@id/horizontalScrollViewCars"
            android:layout_margin="16dp"/>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewMisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMisc">

            <!-- Miscellaneous Layout -->
            <LinearLayout
