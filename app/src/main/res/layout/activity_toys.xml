                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Add more layouts for misc images (up to 5) -->
                <!-- Misc 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying misc 2 image -->
                    <ImageView
                        android:id="@+id/imageViewMisc2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/j2"/>

                    <!-- EditText for specifying amount of misc 2 -->
                    <EditText
                        android:id="@+id/etMisc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Add more layouts for misc images (up to 5) -->
                <!-- Misc 3 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying misc 3 image -->
                    <ImageView
                        android:id="@+id/imageViewMisc3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/j3"/>

                    <!-- EditText for specifying amount of misc 3 -->
                    <EditText
                        android:id="@+id/etMisc3"
