                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Dolls -->
        <TextView
            android:id="@+id/textViewDolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dolls"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_below="@id/horizontalScrollViewMisc"
            android:layout_margin="16dp"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewDolls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDolls">

            <!-- Dolls Layout -->
            <LinearLayout
                android:id="@+id/linearLayoutDolls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Dolls 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying dolls 1 image -->
                    <ImageView
                        android:id="@+id/imageViewDolls1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/t1"/>

                    <!-- EditText for specifying amount of dolls 1 -->
                    <EditText
                        android:id="@+id/etDolls1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Add more layouts for dolls images (up to 5) -->
                <!-- Dolls 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <!-- ImageView for displaying dolls 2 image -->
                    <ImageView
